@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Sans:200,400,400i,700')

body
    font-family: "IBM Plex Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    font-size: 120%

.navbar
    .site-name
        display: none

// custom styling for the cocktail pages
.cocktails hr
    overflow: visible
    padding: 0
    margin-top: 2.5em
    border: none
    border-top: medium double #969696
    color: #969696
    text-align: center
    &:after
        content: "\01F378"
        display: inline-block
        position: relative
        top: -0.7em
        font-size: 1.5em
        padding: 0 0.25em
        background: #ffffff;